<tr id="goods-table-tr-{{ goods.id }}">
  <td>
    <strong>{{ goods.title|raw }}</strong>
  </td>
  <td>
    {{ categorys[goods.category_id] }}
  </td>
  <td>
    {{ goods.price }}
  </td>
  <td>
    {{ goods.ups_num }}－{{ goods.post_num }}－{{ goods.hits }}
  </td>
  <td>
    {{ dict_text('goodsStatus', goods.status) }}
  </td>
  <td>
    {{ admin_macro.user_link(users[goods.publisher_id]) }}
  </td>
  <td>
    {{ goods.created_time|smart_time }}
  </td>
  <td>
    <div class="btn-group">
      <a href="#modal" data-toggle="modal" data-url="{{ path('admin_goods_show', {id:goods.id}) }}" data-url="" class="btn btn-default btn-sm">查看</a>
    </div>
  </td>
</tr>