{% import "AppBundle::admin/macro.html.twig" as admin_macro %}
<tr id="goods-table-tr-{{ goods.id }}">
  <td>
    <strong>{{ goods.title|raw }}</strong>
    {% if goods.status == 3 %}
      <label class="label label-danger">关闭</label>
    {% endif %}
  </td>
  <td>
    {{ category }}
  </td>
  <td>
    {{ goods.price }}
  </td>
  <td>
    {{ goods.ups_num }}－{{ goods.post_num }}－{{ goods.hits }}
  </td>
  <td>
    {{ dict_text('goodsStatus', goods.status) }}
  </td>
  <td>
    {{ admin_macro.user_link(user) }}
  </td>
  <td>
    {{ goods.created_time|smart_time }}
  </td>
  <td>
    <div class="btn-group">
      <a href="#modal" data-toggle="modal" data-url="{{ path('admin_goods_show', {id:goods.id}) }}" data-url="" class="btn btn-default btn-sm">查看</a>
      <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span> 
      </a>
      <ul class="dropdown-menu">
        {% if goods.status != 2 %}
          <li>
            <a title="发布" class="publish-goods" data-url="{{ path('admin_goods_publish', {id:goods.id}) }}" href="javascript:;">
              <span class="glyphicon glyphicon-ok-circle"></span>
              发布
            </a>
          </li>
        {% elseif goods.status == 2 %}
            <li>
              <a title="关闭" class="close-goods" data-url="{{ path('admin_goods_close', {id:goods.id}) }}" href="javascript:;">
                <span class="glyphicon glyphicon-off"></span>
                关闭
              </a>
            </li>
        {% endif %}
      </ul>
    </div>
  </td>
</tr>