{% extends 'AppBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}{{'审核信息'|trans}}{% endblock %}

{% block body %}

<table class="table table-striped table-condenseda table-bordered">
  <tr>
    <th width="25%">{{'用户名'|trans}}</th>
    <td width="75%">
      {{ user.username }}
    </td>
  </tr>
  <tr>
    <th width="25%">{{'昵称'|trans}}</th>
    <td width="75%">
      {{ user.nickname }}
    </td>
  </tr>
  <tr>
    <th width="25%">{{'真实姓名'|trans}}</th>
    <td width="75%">
      {{ approval.truename }}
    </td>
  </tr>
  <tr>
    <th width="25%">{{'学号'|trans}}</th>
    <td width="75%">
      {{ approval.note }}
    </td>
  </tr>
  <tr>
    <th width="25%">{{'学生证'|trans}}</th>
    <td width="75%">
      <img class="mbm" src="{{ file_path(approval.student_card_img, 'default.jpg') }}" width="400">
    </td>
  </tr>
</table>

{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">{{'关闭'|trans}}</button>
{% endblock %}