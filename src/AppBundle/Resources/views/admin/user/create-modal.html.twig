{% extends 'AppBundle::bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}
{% do script(['app/js/admin/user/index.js']) %}

{% block title %}{{'添加新用户'|trans}}{% endblock %}
{% block body %}

<form id="user-create-form" class="form-horizontal" method="post" action="{{ path('admin_user_create')}}">
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="username">{{'用户名'|trans}}</label>
    </div>
    <div class="col-md-7 controls">
      <input type="text" id="username" name="username" data-url="{{path('admin_user_create_username_check')}}" class="form-control" >
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="nickname">{{'昵称'|trans}}</label>
    </div>
    <div class="col-md-7 controls">
      <input type="text" id="nickname" name="nickname" class="form-control" >
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="password">{{'密码'|trans}}</label>
    </div>
      <div class="col-md-7 controls">
        <input type="password" id="password" name="password" class="form-control">
      <p class="help-block">{{'5-20位英文、数字、符号，区分大小写'|trans}}</p>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-2 control-label">
    <label for="confirmPassword">{{'确认密码'|trans}}</label>
  </div>
    <div class="col-md-7 controls">
      <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
      <p class="help-block">{{'再输入一次密码'|trans}}</p>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-2 control-label">
      <label for="email">{{'邮箱地址'|trans}}</label>
    </div>
    <div class="col-md-7 controls">
      <input type="text" id="email" name="email" data-url="{{path('admin_user_create_email_check')}}" class="form-control" >
    </div>
  </div>
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
</form>
{% endblock %}

{% block footer %}
  <button id="user-create-btn" data-submiting-text="{{'正在提交'|trans}}" type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#user-create-form">{{'提交'|trans}}</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'取消'|trans}}</button>
{% endblock %}