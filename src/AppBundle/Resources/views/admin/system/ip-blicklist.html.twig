{% extends 'AppBundle::admin/layout.html.twig' %}

{% set page = 'ip_blacklist' %}
{% set menu = 'system' %}

{% block page_title %}
    {{ 'IP黑名单' }}
{% endblock %}

{% block sidebar %}
  {% include 'AppBundle::admin/system/side-bar.html.twig' %}
{% endblock %}

{% block page_flash_message %}
  {{ web_macro.flash_messages() }}
{% endblock %}

{% block main %}

<form class="form-horizontal" method="post">
  <div class="form-group">
    <div class="col-md-2 control-label">
      <label >{{'IP黑名单'|trans}}</label>
    </div>
    <div class="controls col-md-10">
    <textarea id="blackListIps" name="blackListIps" rows="8" class="form-control">{% if blackListIps|default('')  %}{{blackListIps.ips}}{% endif %}</textarea>
    <div class="help-block">{{'一行一个IP，被加入黑名单的IP将被禁止访问！可使用通配符，例如：202.101.20.*。'|trans}}</div>
  </div>
  {{ form_csrf_token() }}
  <div class="col-md-2 control-label"></div>
    <div class="controls col-md-10">
      <button type="submit" class="btn btn-primary">{{'提交'|trans}}</button>
    </div>
  </div>
</form>  
{% endblock %}