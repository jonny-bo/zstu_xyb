{% extends 'AppBundle::admin/layout.html.twig' %}
{% import "AppBundle::macro.html.twig" as web_macro %}

{% block title %}Feature Magic Setting{% endblock %}

{% set menu = 'system' %}

{% block page_flash_message %}
  {{ web_macro.flash_messages() }}
{% endblock %}

{% block main %}
<div class="page-header"><h1>Feature Magic Setting</h1></div>

　{{ web_macro.flash_messages() }}


<form class="form-horizontal" method="post" novalidate>

  <div class="form-group">
    <div class="controls col-md-12">
      <textarea class="form-control info" id='data' rows="10" name="setting" title="系统设置">{{ setting }}</textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="controls col-md-12">
      <button type="submit" class="btn btn-primary">{{'提交'|trans}}</button>
    </div>
  </div>

  {{ form_csrf_token() }}

</form>

<div class="alert alert-danger">

    <h4>{{'注意事项'|trans}}</h4>
    <ul>
      <li>{{ '此功能，为开发人员调试时使用，请不要使用随意使用，不然将造成不可预知的后果！'|trans }}</li>
      <li>{{ '是否开启实名认证：'|trans }} {% verbatim %}"buy_before_approval": true{% endverbatim %}</li>
      <li>{{ '是否开启web定时任务：'|trans }} {% verbatim %}"disable_web_crontab": 0{% endverbatim %}（{{ '１为关闭'|trans }}，{{ '０为启用'|trans }}）</li>
    </ul>
</div>

{% endblock %}