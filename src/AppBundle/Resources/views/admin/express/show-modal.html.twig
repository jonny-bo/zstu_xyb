{% extends 'AppBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}{{'快递详细信息'|trans}}{% endblock %}

{% block body %}

<table class="table table-striped table-condenseda table-bordered">
  <tr>
    <th width="25%">{{'标题'|trans}}</th>
    <td width="75%">
      {{ express.title|raw }}
    </td>
  </tr>
  <tr>
    <th width="25%">{{'详情'|trans}}</th>
    <td width="75%">
      {{ express.detail|raw }}
    </td>
  </tr>
  <tr>
    <th>{{'规格'|trans}}</th>
    <td>
      {{ dict_text('expressType', express.type) }}
    </td>
  </tr>
  <tr>
    <th>{{'悬赏'|trans}}</th>
    <td>
      {{ express.offer }}
    </td>
  </tr>
  <tr>
    <th>{{'状态'|trans}}</th>
    <td>
      {{ dict_text('expressStatus', express.status) }}
    </td>
  </tr>
  <tr>
    <th>{{'创建时间'|trans}}</th>
    <td> 
      {{ express.created_time|smart_time }}    
    </td>
  </tr>
  <tr>
    <th>{{'发布用户'|trans}}</th>
    <td>
        {{ publisher.username }} -- {{ publisher.nickname }}
    </td>
  </tr>
  <tr>
    <th>{{'接单用户'|trans}}</th>
    <td>
    {% if receiver %}
      {{ receiver.username }} -- {{ receiver.nickname }}
    {% else %}
      {{ '暂未人接单'|trans }}
    {% endif %}
    </td>
  </tr>
</table>

{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">{{'关闭'|trans}}</button>
{% endblock %}