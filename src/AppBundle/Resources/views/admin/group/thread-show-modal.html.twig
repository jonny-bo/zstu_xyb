{% extends 'AppBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}{{'话题信息详情'|trans}}{% endblock %}

{% block body %}

<table class="table table-striped table-condenseda table-bordered">
  <tr>
    <th width="25%">{{'话题标题'|trans}}</th>
    <td width="75%">
      {{ thread.title|raw }}
    </td>
  </tr>
  <tr>
    <th width="25%">{{'话题内容'|trans}}</th>
    <td width="75%">
      {{ thread.content|raw }}
    </td>
  </tr>
  <tr>
    <th width="25%">{{'所属小组'|trans}}</th>
    <td width="75%">
      {{ group.title|raw }}
    </td>
  </tr>
  <tr>
    <th>{{'状态'|trans}}</th>
    <td>
      {{ dict_text('threadStatus', thread.status) }}
    </td>
  </tr>
  <tr>
    <th>{{'创建时间'|trans}}</th>
    <td> 
      {{ thread.created_time|date('Y-n-d H:i:s') }}    
    </td>
  </tr>
  <tr>
    <th>{{'创建人'|trans}}</th>
    <td>
        {{ user.username }} -- {{ user.nickname }}
    </td>
  </tr>
  <tr>
</table>

{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">{{'关闭'|trans}}</button>
{% endblock %}