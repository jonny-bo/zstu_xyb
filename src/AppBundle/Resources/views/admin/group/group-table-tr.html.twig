{% import "AppBundle::admin/macro.html.twig" as admin_macro %}
<tr id="group-table-tr-{{ group.id }}">
  <td>
    {{ group.id }}
  </td>
  <td>
    <strong>{{ group.title|raw }}</strong>
    {% if group.status == 'close' %}
      <label class="label label-danger">关闭</label>
    {% endif %}
  </td>
  <td>
    {{ admin_macro.user_link(user) }}
  </td>
  <td>
    {{ group.member_num }}
  </td>
  <td>
    {{ group.thread_num }}
  </td>
  <td>
    {{ group.post_num }}
  </td>
  <td>
    {{ dict_text('groupStatus', group.status) }}
  </td>
  <td>
    <div class="btn-group">
      <a href="#modal" data-toggle="modal" data-url="{{ path('admin_group_show', {id:group.id}) }}" data-url="" class="btn btn-default btn-sm">查看</a>
      <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span> 
      </a>
      <ul class="dropdown-menu">
        {% if group.status == 'close' %}
          <li>
            <a title="开启" class="open-group" data-url="{{ path('admin_group_open', {id:group.id}) }}" href="javascript:;">
              <span class="glyphicon glyphicon-ok"></span>
              开启小组
            </a>
          </li>
        {% elseif group.status == 'open' %}
            <li>
              <a title="关闭" class="close-group" data-url="{{ path('admin_group_close', {id:group.id}) }}" href="javascript:;">
                <span class="glyphicon glyphicon-off"></span>
                关闭小组
              </a>
            </li>
        {% endif %}
          <li>
            <a title="转移" data-url="{{ path('admin_group_transfer', {id:group.id}) }}" data-toggle="modal" data-target="#modal" href="#modal">
            <span class="glyphicon glyphicon-refresh"></span>
            转移
          </a>
          </li>
      </ul>
    </div>
  </td>
</tr>