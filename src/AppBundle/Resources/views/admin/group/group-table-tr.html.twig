<tr id="group-table-tr-{{ group.id }}">
  <td>
    {{ group.id }}
  </td>
  <td>
    <strong>{{ group.title|raw }}</strong>
  </td>
  <td>
    {{ admin_macro.user_link(users[group.owner_id]) }}
  </td>
  <td>
    {{ group.member_num }}
  </td>
  <td>
    {{ group.thread_num }}
  </td>
  <td>
    {{ group.post_num }}
  </td>
  <td>
    {{ dict_text('groupStatus', group.status) }}
  </td>
  <td>
    <div class="btn-group">
      <a href="#modal" data-toggle="modal" data-url="{{ path('admin_goods_show', {id:group.id}) }}" data-url="" class="btn btn-default btn-sm">查看</a>
    </div>
  </td>
</tr>