<!-- Modal Dialog -->
<div class="modal-dialog" style="width: 800px">
  <!-- Modal Content -->
  <div class="modal-content">
    <!-- Modal Header -->
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="modal-title" id="myModalLabel">查看日志数据</h4>
    </div>
    <!-- END  Modal Header -->
    <!-- Modal Body -->
    <div class="modal-body">
      <div class="box">
        <div class="box-header">
        </div>
        
        <div class="box-body no-padding">
          <table class="table table-hover" id="log-table" style="TABLE-LAYOUT:fixed;WORD-BREAK:break-all">
            <thead>
              <tr>
                <th>旧数据</th>
                <th>新数据</th>
              </tr>
            </thead>

            <tbody>
            {% if log.old_data is empty and log.new_data is empty %}
              <tr><td>没有数据！</td></tr>
            {% else %}
              <tr>
                <td><span>{{ log.old_data|json_decode }}</span></td>
                <td><span>{{ log.new_data|json_decode }}</span></td>
              </tr>
            {% endif %}
            </tbody>
          </table>
        </div>
      </div>
    <!-- END Modal Body -->
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
    </div>
  </div>
  <!-- END Modal Content -->
</div>
